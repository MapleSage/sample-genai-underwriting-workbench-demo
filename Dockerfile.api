FROM node:18-alpine AS frontend-builder
WORKDIR /app/frontend
COPY frontend/package*.json ./
RUN npm install
COPY frontend/ ./
RUN npm run build

FROM python:3.11-slim
WORKDIR /app
COPY azure-version/functions/requirements.txt .
RUN pip install -r requirements.txt
COPY azure-version/functions/ .
COPY --from=frontend-builder /app/frontend/dist ./static
EXPOSE 8080
CMD ["python", "-m", "azure.functions.worker", "--host", "0.0.0.0", "--port", "8080"]